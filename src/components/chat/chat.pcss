.chat {
  padding: 0 13px;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 2;
  min-height: 100vh;
  position: relative;

  &__empty {
    margin: auto;
    padding: 0;
    font-style: normal;
    font-weight: 400;
    font-size: $font-size-titles;
    line-height: 22px;
    color: $text-primary-color;
  }
}
