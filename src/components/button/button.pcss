@import "../../../configs/index.pcss";

.button {
  width: 280px;
  height: 37px;
  background: var(--button-enable-color);
  border-radius: 8px;
  border: none;
  cursor: pointer;
  color: var(--text-button-color);
}

.button:hover {
  opacity: 0.7;
}

.button:disabled {
  background: var(--button-disable-color);
  cursor: not-allowed;
  opacity: 0.7;
}

.button:disabled:hover {
  opacity: 0.7;
}
