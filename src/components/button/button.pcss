@import "../../../configs/index.pcss";

.button {
  width: 280px;
  height: 37px;
  background: $button-enable-color;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  color: $text-button-color;

  &:hover {
    opacity: 0.7;
  }

  &:disabled {
    background: $button-disable-color;
    cursor: not-allowed;
    opacity: 0.7;
  }

  &:disabled:hover {
    opacity: 0.7;
  }
}
