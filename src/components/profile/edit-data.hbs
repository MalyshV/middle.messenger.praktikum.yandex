<section class="profile">
  <div class="profile__content">
    <div class="profile__wrapper">
      <div class="profile__image">
        <img class="profile__icon" src="../../../static/icons/profile.svg" alt="иконка профиля" />
      </div>
      <button class="profile__change">Поменять аватар</button>
    </div>
    <form class="profile__form">
      <fieldset class="profile__fieldset">
        <ul class="profile__data profile__data_place_edit">
          {{>profile/input/input
            label="Почта"
            name="email"
            type="email"
            placeholder="Почта"
            required="true"
            value="pochta@yandex.ru" }}
          {{>profile/input/input
            label="Логин"
            name="login"
            type="text"
            required="true"
            placeholder="Логин"
            value="ivanivanov" }}
          {{>profile/input/input
            label="Имя"
            name="first_name"
            type="text"
            placeholder="Имя"
            value="Иван" }}
          {{>profile/input/input
            label="Фамилия"
            name="second_name"
            type="text"
            placeholder="Фамилия"
            value="Иванов" }}
          {{>profile/input/input
            label="Имя в чате"
            name="display_name"
            type="text"
            placeholder="Имя в чате"
            value="Иван" }}
          {{>profile/input/input
            label="Телефон"
            name="phone"
            type="text"
            placeholder="Телефон"
            value="+7 (909) 967 30 30" }}
        </ul>
        {{> button/button label="Сохранить" }}
      </fieldset>
    </form>
  </div>
</section>
