@import "../../configs/index.pcss";

.page {
  margin: 0 auto;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: var(--page-font);
}

.page__content {
  width: 100%;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.page__section {
  width: 100%;
  padding: 0;
  display: flex;
  align-content: stretch;
}
